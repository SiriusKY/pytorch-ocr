{
  "name": "OCR",
  "n_gpu": 1,
  "arch": {
    "type": "RecognizeModel",
    "args": {
      "num_chars": 97
    }
  },
  "data_loader": {
    "type": "ICDARDataLoader",
    "args": {
      "image_dir": "/home/xiekaiyu/ocr/dataset/ICDAR2015WordRecognition/ch4_training_word_images_gt",
      "gt_path": "/home/xiekaiyu/ocr/dataset/ICDAR2015WordRecognition/ch4_training_word_images_gt/gt.txt",
      "label_dict": "/home/xiekaiyu/workspace/pytorch-ocr/label_dicts/label_dict_en.txt",
      "version": "2015",
      "batch_size": 8,
      "reshape_size": [
        256,
        48
      ],
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 2
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "nll_loss",
  "metrics": [
    "accuracy",
    "top_k_acc"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "recog_model/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": false
  }
}

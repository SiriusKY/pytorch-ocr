{
  "name": "OCR",
  "n_gpu": 1,
  "arch": {
    "type": "RecognizeModel",
    "args": {
      "num_chars": 99,
      "d_model": 512,
      "nhead": 8,
      "num_layers": 6
    }
  },
  "data_loader": {
    "type": "OCRDataLoader",
    "args": {
      "image_dir": "/home/stu7/workspace/ocr/dataset/all/Synth90k/90kDICT32px",
      "gt_path": "/home/stu7/workspace/ocr/dataset/all/Synth90k/90kDICT32px/annotation_train_clean.txt",
      "label_dict": "/home/stu7/workspace/ocr/pytorch-ocr/label_dicts/label_dict_en.txt",
      "version": "Synth90k",
      "batch_size": 16,
      "reshape_size": [
        224,
        64
      ],
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 4
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 0.4,
      "weight_decay": 0
    }
  },
  "loss": "ctc_loss",
  "metrics": [],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 4,
      "gamma": 0.5
    }
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "recog_model/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "tensorboard": true
  }
}
